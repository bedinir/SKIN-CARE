@model IEnumerable<SKIN_CARE.Models.Markat>

@{
    ViewBag.Title = "Index";
}

<h3>Kerko sipas markes se produktit</h3>
@if (User.IsInRole("Admin"))
{<p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>

            @Html.DisplayNameFor(model => model.EmriMarkes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                @Html.ActionLink(item.EmriMarkes, "Index", "Produktets", new { id = item.ID }, null)

            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    <br />
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                }
            </td>
        </tr>
    }

</table>
